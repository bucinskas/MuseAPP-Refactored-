  <body>

           <div class="menu-desktop hide d-show">
           <ul class="main-nav">
          <li class="muse-logo"><a href="/">Muse</a></li>
          <li class="toggle-button burger"><i class="fas fa-bars"></i></li>
            <li class="active burger"><a href="/">Shots</a></li>
            <li class="burger"><a href="/users">Artists</a></li>
            <li class="burger"><a href="/shots/new">Share now</a></li>
            <% if (!currentUser){ %>
            <li class="muse-signup burger"><a href="/register">Sign up</a></li>
            <li class="burger"><a href="/login">Sign in</a></li>
           <% } else { %>
           <li class="muse-profile-image burger"><img height="30" width="30" border-radius="50%" src="<%=currentUser.avatar%>"></li>
         <li class="burger"> <a href="/users/<%= currentUser.id %>">
            <%=currentUser.username%></a></li>
            <li class="burger"><a href="/logout">Logout</a></li>      
           <% } %>
          <li class="muse-search burger">
          <form action="/shots" method="GET" >
            <input type="text" name="search" class="searchBox" placeholder="Search">
          </form>
          </li>
          </ul>
          </div>

      



           <div class="menu-mobile d-hide">
      <div class="icon-menu"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
  <defs>
    <style>
      .cls-1 {
        fill: rgba(255,255,255, 0.9);
      }
      .cls-2 {
        fill: none;
      }
    </style>
  </defs>
  <g>
    <rect class="cls-1 menu-bar-1" width="18" height="2" transform="translate(3 6)"/>
    <rect class="cls-1 menu-bar-2" width="18" height="2" transform="translate(3 11)"/>
    <rect class="cls-1 menu-bar-3" width="12" height="2" transform="translate(3 16)"/>
    <rect class="cls-2" width="24" height="24" />
  </g>
</svg>

      </div>
      <div class="site-menu-overlay hidden"></div>
      <div class="icon-menu-close hidden"><svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" fill="#000000">
    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
    <path d="M0 0h24v24H0z" fill="none"/>
</svg>
      </div>
      <div class="site-menu hidden">
        <ul>
         <li class="menu-name-videos"><a href="/">Shots</a></li>
           <li class="menu-name-speaking"><a href="/users" class="special-link">Artists</a></li>
             <li class="menu-name-podcasts"><a href="/shots/new" class="special-link">Share now</a></li>
                 <% if (!currentUser){ %>
              <li class="menu-name-writings"><a href="/register" class="special-link">Sign up</a></li>
              <li class="menu-name-more"><a href="/login" class="special-link">Sign in</a></li>
                 <% } else { %>
                 <div class="profile-flex">
               <li class="muse-profile-image"><img height="30" width="30" border-radius="50%" src="<%=currentUser.avatar%>"></li>
               <li class="menu-user-profile-name"> <a href="/users/<%= currentUser.id %>">
            <%=currentUser.username%></a></li>
            </div>
            <li><a href="/logout">Logout</a></li>   
               <li class="menu-name-more"><a href="/logout" class="special-link">Logout</a></li>
               <li class="muse-search">
          <form action="/shots" method="GET" >
            <input type="text" name="search" class="searchBox" placeholder="Search">
          </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>

