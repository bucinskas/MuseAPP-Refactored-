<% layout('layouts/boilerplate') -%>



<div class="wrapper">
  
   <aside class="sidebar">
      <div class="profile-info">
      <img src="<%= user.avatar %>" class="profile-image" alt="user profile image">
      <h1><%=user.username%></h1>
      <p>Location:<%= user.location %> </p>
      <p>Bio:<%=user.bio%></p>
      <p class="authorName"><%=user.firstName%></p>
      <p>Joined <span style="font-weight: bold"><%= moment(user.createdAt).format("MMMM YYYY") %></span></p>
      <p><%=user.email%></p>

        <% if(currentUser && currentUser._id.equals(user._id)) { %>
      <button><a href="/users/<%=user._id%>/edit">Update profile</a></button>
        <% } %>
      </div>
      <div class="profile-stats">
      <p>Shots: <%= shots.length %></p>
      <p>Likes:   <%= likes %></p>
      <p>Comments: <%= comments %></p>
      </div>
    
   </aside>
    
  <article class="content">
    <% shots.forEach(function(shot){ %>
     <div class="panel">
    <a href="/shots/<%=shot.id%>"><img src="<%=shot.image%>" alt="the image" width="200px"></a>

     <p class="title"><a href="/shots/<%=shot.id%>"></img><%=shot.title.substring(0,25)%></a>..</p>
      <p><a href="/users/<%=shot.author.id%>"><%=shot.author.username%></a></p>
      <p><%=shot.category%></p>
    </div>
      <% }); %>
    
  </article>
    
</div>



    
   
   
    



