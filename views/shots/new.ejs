<% layout('layouts/boilerplate') -%>

<div class="add-new-shot">
<p class="add-new-shot-header">Add new shot</p>
<form class="newShot" action="/shots" method="POST" enctype="multipart/form-data">
  <div class="field">
    <input type="text" name="shot[title]" placeholder="title">
  </div>

  <div>
     <input type="file" accept="image/*" name="image" required/>
   </div>

  <div class="field">
    <input type="text" name="shot[body]" placeholder="description">
  </div>
  <div class="field">
    <label for="select-category">Category</label>
    <select class="form-control" id="select-category" name="shot[category]" required>
      <option value="" selected disabled>Select Category</option>
      <option value="Photography">Photography</option>
      <option value="Web Design">Web Design</option>
      <option value="Illustration">Illustration</option>
      <option value="Branding">Branding</option>
      <option value="Fashion">Fashion</option>      
    </select>
  </div>
  <button class="submit-shot-button">Submit</button>
</form>
</div>


